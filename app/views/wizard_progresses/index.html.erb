<% page_title = @wizard_type == "plan_creation" ? "Plan wizards" : "Comparisons" %>
<% content_for :title, page_title %>

<div class="px-4 py-10 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-4xl space-y-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-semibold text-gray-900 dark:text-white"><%= page_title %></h1>
        <p class="mt-1 text-sm text-gray-600 dark:text-gray-300">
          <%= @status == "complete" ? "Review archived sessions." : "Continue where you left off." %>
        </p>
      </div>
      <% if @wizard_type == "plan_creation" %>
        <%= button_to "Start plan wizard",
                      wizard_progresses_path(wizard_type: "plan_creation"),
                      method: :post,
                      class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2",
                      data: { test_id: "start-plan-wizard-button" } %>
      <% else %>
        <%= button_to "New comparison",
                      wizard_progresses_path(wizard_type: "plan_comparison"),
                      method: :post,
                      class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2",
                      data: { test_id: "start-comparison-button" } %>
      <% end %>
    </div>

    <div class="flex items-center gap-2">
      <%= link_to "In progress",
                  wizard_progresses_path(status: "in_progress", wizard_type: @wizard_type),
                  class: "rounded-full px-3 py-1 text-sm font-semibold #{@status == 'in_progress' ? 'bg-indigo-600 text-white' : 'bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-200'}" %>
      <%= link_to "Archived",
                  wizard_progresses_path(status: "complete", wizard_type: @wizard_type),
                  class: "rounded-full px-3 py-1 text-sm font-semibold #{@status == 'complete' ? 'bg-indigo-600 text-white' : 'bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-200'}" %>
    </div>

    <% if @wizard_progresses.empty? %>
      <div class="rounded-lg border border-dashed border-gray-300 bg-white p-6 text-sm text-gray-600 shadow-sm dark:border-white/10 dark:bg-gray-900 dark:text-gray-200">
        <% if @status == "complete" %>
          <p>You don’t have any archived <%= @wizard_type == "plan_creation" ? "plan wizards" : "comparisons" %>.</p>
        <% else %>
          <p>You don’t have any in-progress <%= @wizard_type == "plan_creation" ? "plan wizards" : "comparisons" %>.</p>
          <div class="mt-4">
            <% if @wizard_type == "plan_creation" %>
              <%= button_to "Start a new plan wizard",
                            wizard_progresses_path(wizard_type: "plan_creation"),
                            method: :post,
                            class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2" %>
            <% else %>
              <%= button_to "Start a new comparison",
                            wizard_progresses_path(wizard_type: "plan_comparison"),
                            method: :post,
                            class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2" %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="space-y-3">
        <% @wizard_progresses.each do |progress| %>
          <div class="flex items-center justify-between rounded-lg border border-gray-200 bg-white p-4 shadow-sm dark:border-white/10 dark:bg-gray-900">
            <div>
              <p class="text-xs uppercase tracking-wide text-gray-500 dark:text-gray-400"><%= progress.wizard_type.humanize %></p>
              <p class="text-sm font-semibold text-gray-900 dark:text-gray-100">
                <% if progress.name.present? %>
                  <%= progress.name %>
                <% elsif progress.subject.is_a?(Plan) %>
                  <%= progress.subject.name %>
                <% else %>
                  Draft <%= progress.wizard_type %>
                <% end %>
              </p>
              <p class="text-xs text-gray-500 dark:text-gray-400">Step <%= progress.current_step.humanize %> · Updated <%= time_ago_in_words(progress.updated_at) %> ago</p>
            </div>
            <div class="flex items-center gap-3">
              <%= link_to "Open", wizard_progress_path(progress), class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2" %>
              <%= button_to "Delete",
                            wizard_progress_path(progress),
                            method: :delete,
                            data: { turbo_confirm: "Delete this wizard session?" },
                            class: "inline-flex items-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-red-500 focus:outline-none focus:ring-2 focus:ring-red-600 focus:ring-offset-2" %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
