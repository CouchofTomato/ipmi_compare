<% plan = progress.subject %>
<% plan_version = plan&.current_plan_version %>
<% plan_modules = plan&.plan_modules&.includes(:module_group)&.order("module_groups.position ASC NULLS LAST", "plan_modules.created_at ASC") || [] %>
<% existing_requirements = PlanModuleRequirement.where(plan_version: plan_version).group_by(&:dependent_module_id) %>
<% input_classes = "block w-full rounded-md border-0 bg-white px-3 py-2 text-base text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:ring-white/10 dark:placeholder:text-gray-500 dark:focus:ring-indigo-500" %>

<%= turbo_frame_tag "wizard_step" do %>
  <div class="space-y-6">
    <div>
      <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100">Step 6: Module requirements</h2>
      <p class="mt-1 text-sm text-gray-600 dark:text-gray-300">
        Link modules that depend on other modules so brokers know what must be selected together.
      </p>
    </div>

    <% has_errors = (resource.respond_to?(:errors) && resource.errors.any?) || progress.errors.any? %>
    <% if has_errors %>
      <div class="rounded-lg border border-red-200 bg-red-50 p-4 text-sm text-red-700 shadow-xs dark:border-red-500/30 dark:bg-red-500/10 dark:text-red-200">
        <p class="font-semibold">We couldn't save these requirements</p>
        <ul class="mt-2 list-disc space-y-1 pl-4">
          <% if resource.respond_to?(:errors) && resource.errors.any? %>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          <% end %>
          <% progress.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with url: wizard_progress_path(progress),
                  method: :patch,
                  data: { turbo_frame: "wizard_step" },
                  html: { class: "space-y-8" } do %>
      <% if plan_modules.empty? %>
        <div class="rounded-lg border border-dashed border-gray-300 bg-white p-6 text-center text-sm text-gray-500 shadow-xs dark:border-white/20 dark:bg-gray-900 dark:text-gray-300">
          Add at least one module before setting requirements.
        </div>
      <% else %>
        <div class="space-y-6">
          <% plan_modules.group_by(&:module_group).each do |group, modules| %>
            <div class="rounded-lg border border-gray-200 bg-white p-4 shadow-xs dark:border-white/10 dark:bg-gray-900">
              <div class="mb-3 flex items-center justify-between">
                <div>
                  <p class="text-sm uppercase tracking-wide text-gray-500 dark:text-gray-400">Group</p>
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-white"><%= group&.name || "Ungrouped modules" %></h3>
                </div>
              </div>

              <div class="space-y-4">
                <% modules.each do |mod| %>
                  <% existing_required_ids = Array(existing_requirements[mod.id]).map(&:required_module_id) %>
                  <% available_targets = plan_modules.reject { |m| m.id == mod.id } %>

                  <div class="rounded-md border border-gray-200 p-4 dark:border-white/10">
                    <div class="flex items-center justify-between gap-3">
                      <div>
                        <p class="text-sm uppercase tracking-wide text-gray-500 dark:text-gray-400">Module</p>
                        <p class="text-base font-semibold text-gray-900 dark:text-white"><%= mod.name %></p>
                      </div>
                      <p class="text-xs text-gray-500 dark:text-gray-400"><%= group&.name %></p>
                    </div>

                    <% if available_targets.empty? %>
                      <p class="mt-3 text-sm text-gray-600 dark:text-gray-300">No other modules to require.</p>
                    <% else %>
                      <div class="mt-3 grid gap-2 sm:grid-cols-2">
                        <% available_targets.each do |target| %>
                          <label class="flex items-start gap-3 rounded-md border border-gray-200 bg-white px-3 py-2 text-sm text-gray-700 shadow-xs transition hover:border-indigo-300 hover:bg-indigo-50/50 dark:border-white/10 dark:bg-gray-800 dark:text-gray-200 dark:hover:border-indigo-400/60 dark:hover:bg-indigo-500/10">
                            <%= check_box_tag "requirements[#{mod.id}][]",
                                               target.id,
                                               existing_required_ids.include?(target.id),
                                               class: "mt-1 h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500",
                                               data: { test_id: "require-#{mod.id}-#{target.id}-checkbox" } %>
                            <span>
                              <span class="font-medium text-gray-900 dark:text-gray-100"><%= target.name %></span>
                              <% if target.module_group && target.module_group != group %>
                                <span class="block text-xs text-gray-500 dark:text-gray-400">Group: <%= target.module_group.name %></span>
                              <% end %>
                            </span>
                          </label>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
      <div class="flex flex-col gap-3 border-t border-gray-200 pt-6 sm:flex-row sm:items-center sm:justify-between dark:border-white/10">
        <div>
          <%= button_tag "← Back",
                         name: "step_action",
                         value: "previous",
                         class: "inline-flex items-center gap-1 rounded-md border border-gray-300 px-4 py-2 text-sm font-semibold text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2 dark:border-white/10 dark:text-gray-200 dark:hover:bg-white/10 dark:focus:ring-indigo-500" %>
        </div>
        <%= button_tag "Save and continue →",
                       name: "step_action",
                       value: "next",
                       class: "inline-flex items-center gap-1 rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2 dark:bg-indigo-500 dark:hover:bg-indigo-400",
                       data: { test_id: "next-step-button" } %>
      </div>
    <% end %>
  </div>
<% end %>
