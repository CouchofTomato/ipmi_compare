<% plan = progress.subject %>
<% plan_module = local_assigns[:resource].is_a?(PlanModule) ? local_assigns[:resource] : PlanModule.new(plan:) %>
<% available_groups = plan&.module_groups&.order(:position) || [] %>
<% existing_modules = plan&.plan_modules&.includes(:module_group)&.order(:created_at) || [] %>
<% input_classes = "block w-full rounded-md border-0 bg-white px-3 py-2 text-base text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:ring-white/10 dark:placeholder:text-gray-500 dark:focus:ring-indigo-500" %>
<% field_classes = lambda do |attributes, *extra_classes|
     attrs = Array(attributes)
     classes = [input_classes] + extra_classes
     classes << "ring-red-500 focus:ring-red-500" if attrs.any? { |attr| plan_module.errors[attr].present? }
     classes.compact.join(" ")
   end %>

<%= turbo_frame_tag "wizard_step" do %>
  <div class="space-y-6">
    <div>
      <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100">Step 5: Plan modules</h2>
      <p class="mt-1 text-sm text-gray-600 dark:text-gray-300">Define the modules that make up this plan, assign them to groups, and mark core modules.</p>
    </div>

    <% has_errors = (plan_module.respond_to?(:errors) && plan_module.errors.any?) || progress.errors.any? %>
    <% if has_errors %>
      <div class="rounded-lg border border-red-200 bg-red-50 p-4 text-sm text-red-700 shadow-xs dark:border-red-500/30 dark:bg-red-500/10 dark:text-red-200">
        <p class="font-semibold">We couldn't save this plan module</p>
        <ul class="mt-2 list-disc space-y-1 pl-4">
          <% if plan_module.respond_to?(:errors) && plan_module.errors.any? %>
            <% plan_module.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          <% end %>
          <% progress.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: plan_module,
                  scope: :modules,
                  url: wizard_progress_path(progress),
                  method: :patch,
                  data: { turbo_frame: "wizard_step" },
                  local: true,
                  html: { class: "space-y-6" } do |form| %>
      <div class="space-y-4 rounded-lg border border-gray-200 bg-white p-6 shadow-sm dark:border-white/10 dark:bg-gray-900">
        <% if available_groups.empty? %>
          <div class="rounded-lg border border-dashed border-gray-300 bg-gray-50 px-4 py-3 text-sm text-gray-600 dark:border-white/20 dark:bg-gray-800 dark:text-gray-200">
            Add at least one module group before creating modules.
          </div>
        <% end %>

        <div>
          <%= form.label :name, "Module name", class: "text-sm font-medium text-gray-900 dark:text-gray-100" %>
          <div class="mt-2">
            <%= form.text_field :name, class: field_classes.call(:name), placeholder: "e.g. Hospitalization" %>
          </div>
          <% if plan_module.errors[:name].present? %>
            <p class="mt-2 text-sm text-red-600 dark:text-red-400"><%= plan_module.errors[:name].to_sentence %></p>
          <% end %>
        </div>

        <div class="grid gap-4 sm:grid-cols-2">
          <div>
            <%= form.label :module_group_id, "Module group", class: "text-sm font-medium text-gray-900 dark:text-gray-100" %>
            <div class="mt-2">
              <%= form.collection_select :module_group_id,
                                         available_groups,
                                         :id,
                                         :name,
                                         { prompt: available_groups.empty? ? "No groups available" : "Select a module group" },
                                         class: field_classes.call(:module_group),
                                         disabled: available_groups.empty? %>
            </div>
            <% if plan_module.errors[:module_group].present? || plan_module.errors[:module_group_id].present? %>
              <p class="mt-2 text-sm text-red-600 dark:text-red-400"><%= (plan_module.errors[:module_group] + plan_module.errors[:module_group_id]).uniq.to_sentence %></p>
            <% end %>
          </div>

          <div class="flex items-center gap-3 pt-6 sm:pt-8">
            <%= form.check_box :is_core, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
            <%= form.label :is_core, "Core module", class: "text-sm font-medium text-gray-900 dark:text-gray-100" %>
          </div>
        </div>

        <div class="grid gap-4 sm:grid-cols-2">
          <div>
            <%= form.label :overall_limit_usd, "Limit (USD)", class: "text-sm font-medium text-gray-900 dark:text-gray-100" %>
            <div class="mt-2">
              <%= form.number_field :overall_limit_usd, class: field_classes.call(:overall_limit_usd), step: 0.01, min: 0 %>
            </div>
          </div>

          <div>
            <%= form.label :overall_limit_gbp, "Limit (GBP)", class: "text-sm font-medium text-gray-900 dark:text-gray-100" %>
            <div class="mt-2">
              <%= form.number_field :overall_limit_gbp, class: field_classes.call(:overall_limit_gbp), step: 0.01, min: 0 %>
            </div>
          </div>
        </div>

        <div class="grid gap-4 sm:grid-cols-2">
          <div>
            <%= form.label :overall_limit_eur, "Limit (EUR)", class: "text-sm font-medium text-gray-900 dark:text-gray-100" %>
            <div class="mt-2">
              <%= form.number_field :overall_limit_eur, class: field_classes.call(:overall_limit_eur), step: 0.01, min: 0 %>
            </div>
          </div>

          <div>
            <%= form.label :overall_limit_unit, "Limit unit", class: "text-sm font-medium text-gray-900 dark:text-gray-100" %>
            <div class="mt-2">
              <%= form.text_field :overall_limit_unit, class: field_classes.call(:overall_limit_unit), placeholder: "e.g. per policy / per year" %>
            </div>
          </div>
        </div>

        <div>
          <%= form.label :overall_limit_notes, "Limit notes (optional)", class: "text-sm font-medium text-gray-900 dark:text-gray-100" %>
          <div class="mt-2">
            <%= form.text_area :overall_limit_notes, class: field_classes.call(:overall_limit_notes, "min-h-[100px]"), placeholder: "Add context for how this limit applies." %>
          </div>
        </div>

      </div>

      <div class="flex flex-col gap-3 border-t border-gray-200 pt-6 sm:flex-row sm:items-center sm:justify-between dark:border-white/10">
        <div class="flex gap-3">
          <%= button_tag "← Back",
                         name: "step_action",
                         value: "previous",
                         class: "inline-flex items-center gap-1 rounded-md border border-gray-300 px-4 py-2 text-sm font-semibold text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2 dark:border-white/10 dark:text-gray-200 dark:hover:bg-white/10 dark:focus:ring-indigo-500" %>
        </div>

        <div class="flex flex-wrap items-center gap-3">
          <%= button_tag "Add module",
                         name: "step_action",
                         value: "add",
                         class: "inline-flex items-center gap-2 rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-xs transition hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2 disabled:cursor-not-allowed disabled:bg-gray-300 disabled:text-gray-600 dark:disabled:bg-gray-700 dark:disabled:text-gray-400 dark:bg-indigo-500 dark:hover:bg-indigo-400",
                         disabled: available_groups.empty? %>
          <%= button_tag "Save and continue →",
                         name: "step_action",
                         value: "next",
                         class: "inline-flex items-center gap-2 rounded-md border border-transparent px-4 py-2 text-sm font-semibold text-indigo-700 bg-indigo-50 shadow-xs hover:bg-indigo-100 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2 dark:bg-indigo-600/20 dark:text-indigo-100 dark:hover:bg-indigo-600/30" %>
        </div>
      </div>
    <% end %>

    <div class="space-y-3">
      <div class="flex items-center justify-between">
        <h3 class="text-base font-semibold text-gray-900 dark:text-gray-100">Plan modules added</h3>
        <p class="text-sm text-gray-500 dark:text-gray-400"><%= pluralize(existing_modules.size, "module") %></p>
      </div>

      <% if existing_modules.empty? %>
        <div class="rounded-lg border border-dashed border-gray-300 bg-white p-6 text-sm text-gray-500 shadow-xs dark:border-white/20 dark:bg-gray-900 dark:text-gray-300">
          No modules yet. Add your first module to continue.
        </div>
      <% else %>
        <div class="grid gap-4 sm:grid-cols-2">
          <% existing_modules.each do |mod| %>
            <div class="rounded-lg border border-gray-200 bg-white p-4 shadow-sm dark:border-white/10 dark:bg-gray-900">
              <div class="flex items-start justify-between gap-3">
                <div class="space-y-1">
                  <p class="text-xs uppercase tracking-wide text-gray-500 dark:text-gray-400">
                    <%= mod.module_group&.name || "Ungrouped" %>
                  </p>
                  <p class="text-base font-semibold text-gray-900 dark:text-gray-100"><%= mod.name %></p>
                  <% if mod.is_core? %>
                    <span class="inline-flex items-center rounded-full bg-indigo-50 px-2 py-1 text-xs font-semibold text-indigo-700 dark:bg-indigo-600/20 dark:text-indigo-100">Core module</span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
