<%= turbo_frame_tag "wizard_step" do %>
  <div class="space-y-6">
    <div>
      <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100">Comparison</h2>
      <p class="mt-1 text-sm text-gray-600 dark:text-gray-300">
        Review the selected plans and modules. Archive the comparison when you're done.
      </p>
    </div>

    <% comparison_data = presenter.comparison_data %>
    <% if comparison_data[:plan_versions].empty? %>
      <div class="rounded-lg border border-dashed border-gray-300 bg-white p-6 text-sm text-gray-600 shadow-sm dark:border-white/10 dark:bg-gray-900 dark:text-gray-200">
        <p>No plans selected yet. Head back to choose plans for this comparison.</p>
      </div>
    <% else %>
      <div class="rounded-lg border border-slate-200 bg-white p-4 shadow-sm dark:border-slate-700 dark:bg-slate-900">
        <div class="flex flex-wrap items-start justify-between gap-3">
          <div>
            <p class="text-sm font-semibold text-slate-900 dark:text-slate-100">Selected plans</p>
            <p class="text-xs text-slate-500 dark:text-slate-400">Remove a plan or adjust module selections.</p>
          </div>
          <%= button_to "Edit selections",
                        wizard_progress_path(progress),
                        method: :patch,
                        params: { step_action: "previous" },
                        data: { turbo_frame: "wizard_step" },
                        class: "inline-flex items-center justify-center rounded-md border border-slate-300 bg-white px-3 py-1.5 text-xs font-semibold text-slate-700 shadow-sm hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2 focus:ring-offset-white dark:border-slate-600 dark:bg-slate-900 dark:text-slate-200 dark:hover:bg-slate-800 dark:focus:ring-offset-slate-900" %>
        </div>
        <div class="mt-3 flex flex-wrap gap-2">
          <% presenter.saved_plan_selections.each do |selection| %>
            <div class="flex items-center gap-2 rounded-full border border-slate-200 bg-slate-50 px-3 py-1 text-xs text-slate-700 dark:border-slate-700 dark:bg-slate-800/50 dark:text-slate-200">
              <span class="font-semibold text-slate-900 dark:text-slate-100"><%= selection[:plan].name %></span>
              <span class="text-slate-500 dark:text-slate-400"><%= selection[:plan].insurer.name %></span>
              <%= button_to "Remove",
                            remove_comparison_plan_selection_path(progress, selection_id: selection[:id], plan_id: selection[:plan].id),
                            method: :delete,
                            data: { turbo_confirm: "Remove this plan from the comparison?" },
                            form: { class: "inline" },
                            class: "ml-1 text-[11px] font-semibold text-rose-700 hover:text-rose-800 dark:text-rose-300 dark:hover:text-rose-200" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="relative overflow-x-auto rounded-lg border border-slate-200 bg-white shadow-sm dark:border-slate-700 dark:bg-slate-900">
        <table class="min-w-full text-left text-sm text-slate-700 dark:text-slate-200">
          <thead class="bg-slate-50 text-xs uppercase tracking-wide text-slate-500 dark:bg-slate-800/60 dark:text-slate-300">
            <tr>
              <th class="sticky left-0 top-0 z-30 bg-slate-50 px-4 py-3 font-semibold shadow-sm dark:bg-slate-800/60">Benefit</th>
              <% comparison_data[:plan_versions].each do |plan_version| %>
                <th class="sticky top-0 z-20 bg-slate-50 px-4 py-3 font-semibold shadow-sm dark:bg-slate-800/60">
                  <div class="text-sm font-semibold text-slate-900 dark:text-slate-100"><%= plan_version[:plan_name] %></div>
                  <div class="text-xs text-slate-500 dark:text-slate-400"><%= plan_version[:insurer_name] %></div>
                </th>
              <% end %>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-200 dark:divide-slate-800">
            <% comparison_data[:categories].each do |category| %>
              <tr class="bg-slate-100/80 text-xs uppercase tracking-wide text-slate-500 dark:bg-slate-800/50 dark:text-slate-300">
                <td class="sticky left-0 z-10 bg-slate-100/80 px-4 py-3 font-semibold shadow-sm dark:bg-slate-800/50" colspan="<%= comparison_data[:plan_versions].size + 1 %>"><%= category[:name] %></td>
              </tr>
              <% category[:benefits].each do |benefit| %>
                <tr class="bg-white dark:bg-slate-900">
                  <td class="sticky left-0 z-10 bg-white px-4 py-3 font-semibold text-slate-900 shadow-sm dark:bg-slate-900 dark:text-slate-100"><%= benefit[:name] %></td>
                  <% comparison_data[:plan_versions].each do |plan_version| %>
                    <% entries = benefit[:per_plan][plan_version[:plan_version_id]] || [] %>
                    <td class="px-4 py-3 align-top">
                      <% if entries.empty? %>
                        <span class="text-xs text-slate-400">Not included</span>
                      <% else %>
                        <div class="space-y-2">
                          <% entries.each do |entry| %>
                            <div class="rounded-md border border-slate-200 bg-slate-50/70 px-2.5 py-2 text-xs text-slate-700 dark:border-slate-700 dark:bg-slate-800/40 dark:text-slate-200">
                              <p class="font-semibold text-slate-900 dark:text-slate-100"><%= entry[:plan_module_name] %></p>
                              <% if entry[:coverage_description].present? %>
                                <p class="text-slate-600 dark:text-slate-300 leading-snug"><%= entry[:coverage_description] %></p>
                              <% end %>
                              <% limit_value = entry[:limit_gbp] || entry[:limit_usd] || entry[:limit_eur] %>
                              <% limit_currency =
                                   if entry[:limit_gbp].present?
                                     "GBP"
                                   elsif entry[:limit_usd].present?
                                     "USD"
                                   elsif entry[:limit_eur].present?
                                     "EUR"
                                   end %>
                              <% if limit_value.present? || entry[:limit_unit].present? %>
                                <p class="text-slate-600 dark:text-slate-300">
                                  Limit:
                                  <%= limit_currency %><%= limit_value || "N/A" %>
                                  <%= entry[:limit_unit] %>
                                </p>
                              <% end %>
                              <% if entry[:waiting_period_months].present? %>
                                <p class="text-slate-600 dark:text-slate-300">Waiting: <%= entry[:waiting_period_months] %> months</p>
                              <% end %>
                              <% if entry[:benefit_limit_group_name].present? %>
                                <p class="text-slate-600 dark:text-slate-300">Shared limit: <%= entry[:benefit_limit_group_name] %></p>
                              <% end %>
                            </div>
                          <% end %>
                        </div>
                      <% end %>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>

    <div class="flex items-center justify-between gap-3">
      <%= button_to "Back to selections",
                    wizard_progress_path(progress),
                    method: :patch,
                    params: { step_action: "previous" },
                    data: { turbo_frame: "wizard_step" },
                    class: "inline-flex items-center justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-semibold text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2 focus:ring-offset-white dark:border-white/10 dark:bg-gray-900 dark:text-gray-200 dark:hover:bg-gray-800 dark:focus:ring-offset-gray-900" %>
      <%= button_to "Archive comparison",
                    wizard_progress_path(progress),
                    method: :patch,
                    params: { step_action: "complete" },
                    data: { turbo_frame: "wizard_step" },
                    class: "inline-flex items-center justify-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2 focus:ring-offset-white dark:focus:ring-offset-gray-900" %>
    </div>
  </div>
<% end %>
