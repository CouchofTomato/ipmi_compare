<%= turbo_frame_tag "wizard_step" do %>
  <%= turbo_frame_tag "plan_selection" do %>
    <div class="grid gap-6 lg:grid-cols-3">
      <div class="lg:col-span-2 space-y-4 rounded-xl border border-slate-200 bg-white p-4 shadow-sm dark:border-slate-700 dark:bg-slate-900">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-xs font-semibold uppercase tracking-wide text-slate-500 dark:text-slate-400">Search plans</p>
            <p class="text-sm text-slate-600 dark:text-slate-200">Find a plan and configure its modules.</p>
          </div>
        </div>

        <%= form_with url: search_comparison_plan_selection_path(progress), method: :get, data: { turbo_frame: "plan_search_results" }, class: "flex items-center gap-3" do |f| %>
          <%= f.search_field :q, value: params[:q], placeholder: "Search for a plan", class: "w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm placeholder:text-slate-400 focus:border-indigo-500 focus:ring-indigo-500 dark:border-slate-700 dark:bg-slate-800 dark:text-slate-100 dark:placeholder:text-slate-500" %>
          <%= f.submit "Search", class: "rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow transition hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-white dark:focus:ring-offset-slate-900" %>
        <% end %>

        <%= turbo_frame_tag "plan_search_results" do %>
        <% end %>
      </div>

      <div class="space-y-3 rounded-xl border border-slate-200 bg-white p-4 shadow-sm dark:border-slate-700 dark:bg-slate-900">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-xs font-semibold uppercase tracking-wide text-slate-500 dark:text-slate-400">Chosen plans</p>
            <p class="text-sm text-slate-600 dark:text-slate-200">Selections saved to this comparison.</p>
          </div>
          <span class="rounded-full bg-slate-100 px-2 py-1 text-[11px] font-semibold text-slate-700 dark:bg-slate-800 dark:text-slate-200"><%= presenter.saved_plan_selections.size %></span>
        </div>

        <% if presenter.saved_plan_selections.empty? %>
          <p class="text-sm text-slate-500 dark:text-slate-400">No plans selected yet.</p>
        <% else %>
          <ul class="space-y-3">
            <% presenter.saved_plan_selections.each do |selection| %>
              <li class="rounded-lg border border-slate-100 bg-slate-50/60 p-3 dark:border-slate-700 dark:bg-slate-800">
                <div class="flex items-start justify-between gap-2">
                  <div>
                    <p class="text-sm font-semibold text-slate-900 dark:text-slate-100"><%= selection[:plan].name %></p>
                    <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-slate-400"><%= selection[:plan].insurer.name %></p>
                  </div>
                  <div class="flex items-center gap-2">
                    <span class="rounded-full bg-white px-2 py-0.5 text-[10px] font-semibold text-slate-600 shadow-inner dark:bg-slate-900 dark:text-slate-200">Plan #<%= selection[:plan].id %></span>
                    <%= button_to remove_comparison_plan_selection_path(progress, selection_id: selection[:id], plan_id: selection[:plan].id),
                                  method: :delete,
                                  data: { turbo_frame: "plan_selection" },
                                  class: "rounded-md border border-slate-200 bg-white px-2 py-1 text-[11px] font-semibold text-slate-700 shadow-sm transition hover:bg-rose-50 hover:text-rose-700 focus:outline-none focus:ring-2 focus:ring-rose-500 focus:ring-offset-2 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-200 dark:hover:bg-rose-900/40 dark:hover:text-rose-200 dark:focus:ring-offset-slate-800" do %>
                      Remove
                    <% end %>
                  </div>
                </div>

                <% if selection[:modules].any? %>
                  <ul class="mt-2 space-y-1.5">
                    <% selection[:modules].each do |group, mod| %>
                      <li class="flex items-center justify-between rounded-md bg-white px-2.5 py-2 text-xs text-slate-700 shadow-sm dark:bg-slate-900 dark:text-slate-200">
                        <span class="font-semibold text-slate-900 dark:text-slate-100"><%= group.name %></span>
                        <span class="text-slate-600 dark:text-slate-300"><%= mod.name %></span>
                      </li>
                    <% end %>
                  </ul>
                <% else %>
                  <p class="mt-2 text-xs text-slate-500 dark:text-slate-400">No modules selected.</p>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>

    <div class="mt-6 flex justify-end">
      <%= button_to "Continue to modules â†’",
                    wizard_progress_path(progress),
                    method: :patch,
                    params: { step_action: "next" },
                    data: { turbo_frame: "wizard_step" },
                    class: "inline-flex items-center justify-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow transition hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-white dark:bg-indigo-500 dark:hover:bg-indigo-400 dark:focus:ring-offset-slate-900" %>
    </div>
  <% end %>
<% end %>
