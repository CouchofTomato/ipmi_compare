<% nav_links = if user_signed_in?
  [
    { name: "Benefits", path: benefits_path },
    { name: "Insurers", path: insurers_path }
  ]
else
  []
end %>

<nav aria-label="Primary navigation" class="border-b border-gray-200 bg-white shadow-sm dark:border-white/10 dark:bg-gray-900">
  <div class="mx-auto flex h-16 max-w-7xl items-center justify-between gap-4 px-4 sm:px-6 lg:px-8">
    <div class="flex items-center gap-8">
      <%= link_to root_path, class: "flex items-center gap-3 text-base font-semibold text-gray-900 hover:text-indigo-600 dark:text-white dark:hover:text-indigo-300" do %>
        <span class="inline-flex h-9 w-9 items-center justify-center rounded-lg bg-indigo-600 text-sm font-semibold text-white shadow-xs dark:bg-indigo-500">IC</span>
        <span class="hidden sm:inline">IPMI Compare</span>
      <% end %>

      <% if nav_links.any? %>
        <div class="hidden items-center gap-6 md:flex">
          <% nav_links.each do |link| %>
            <% path = link[:path] %>
            <% active = request.path == path || request.path.start_with?("#{path}/") %>
            <% base_classes = "rounded-md px-2 py-1 text-sm font-medium transition-colors" %>
            <% link_classes = if active
              "#{base_classes} bg-indigo-50 text-indigo-700 dark:bg-indigo-500/20 dark:text-indigo-200"
            else
              "#{base_classes} text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
            end %>
            <%= link_to link[:name], path, class: link_classes %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="flex items-center gap-3">
      <% if user_signed_in? %>
        <span class="hidden text-sm text-gray-600 sm:inline dark:text-gray-300">
          Signed in as <%= current_user.email %>
        </span>
        <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "inline-flex items-center gap-2 rounded-md border border-gray-300 bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm hover:border-gray-400 hover:text-gray-900 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500 dark:border-white/15 dark:bg-white/10 dark:text-white dark:hover:bg-white/20" %>
      <% else %>
        <%= link_to "Log in", new_user_session_path, class: "inline-flex items-center gap-2 rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:hover:bg-indigo-400" %>
      <% end %>
    </div>
  </div>

  <% if nav_links.any? %>
    <div class="border-t border-gray-200 bg-gray-50 md:hidden dark:border-white/10 dark:bg-gray-900/70">
      <div class="mx-auto flex max-w-7xl flex-wrap gap-4 px-4 py-3 text-sm font-medium text-gray-600 sm:px-6 lg:px-8 dark:text-gray-300">
        <% nav_links.each do |link| %>
          <% path = link[:path] %>
          <% active = request.path == path || request.path.start_with?("#{path}/") %>
          <% base_classes = "rounded-md px-2 py-1 transition-colors" %>
          <% link_classes = if active
            "#{base_classes} bg-indigo-100 text-indigo-700 dark:bg-indigo-500/20 dark:text-indigo-200"
          else
            "#{base_classes} text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
          end %>
          <%= link_to link[:name], path, class: link_classes %>
        <% end %>
      </div>
    </div>
  <% end %>
</nav>
