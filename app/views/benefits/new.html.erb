<% content_for :title, "New Benefit" %>

<div class="px-4 py-10 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-3xl">
    <%= link_to "Back to benefits", benefits_path, class: "inline-flex items-center gap-2 text-sm font-semibold text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300" %>
    <div class="mt-6 overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm dark:border-white/10 dark:bg-gray-900">
      <div class="border-b border-gray-200 bg-gray-50 px-6 py-5 dark:border-white/10 dark:bg-gray-900/50">
        <h1 class="text-lg font-semibold text-gray-900 dark:text-white">Add a new benefit</h1>
        <p class="mt-1 text-sm text-gray-600 dark:text-gray-300">Provide the benefit details so they can be used when configuring plans.</p>
      </div>
      <div class="px-6 py-6">
        <%= render "form", benefit: @benefit, submit_label: "Create benefit", cancel_path: benefits_path %>
      </div>
    </div>
  </div>
</div>
